<!-- body begins here -->
<refsynopsisdiv id='synopsis'>
<cmdsynopsis>
  <command>npm</command>    <arg choice='plain'><replaceable>bin</replaceable></arg>
    <group choice='opt'><arg choice='plain'>-g </arg><arg choice='plain'>--global </arg></group>
</cmdsynopsis>
