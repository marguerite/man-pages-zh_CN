<refnamediv>
<refname>chroot</refname>
<refpurpose>run command or interactive shell with special root directory</refpurpose>
</refnamediv>
<!-- body begins here -->
<refsynopsisdiv id='synopsis'>
<cmdsynopsis>
  <command>chroot</command>    
    <arg choice='opt'><replaceable>OPTION</replaceable></arg>
    <arg choice='plain'><replaceable>NEWROOT</replaceable></arg>
    <arg choice='opt'><arg choice='plain'><replaceable>COMMAND</replaceable></arg><arg choice='opt' rep='repeat'><replaceable>ARG</replaceable></arg></arg>
</cmdsynopsis>
<cmdsynopsis>
